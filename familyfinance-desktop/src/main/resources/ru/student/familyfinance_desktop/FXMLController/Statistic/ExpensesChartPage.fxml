<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
    fx:controller="ru.student.familyfinance_desktop.FXMLController.Statistic.ExpensesChartController">

    <padding>
        <Insets bottom="5" left="5" right="5" top="5" />
    </padding>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
    </rowConstraints>

    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER">
        <Label text="Начало периода: ">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </Label>
        <DatePicker fx:id="beginDatePicker" >
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </DatePicker>
    </HBox>

    <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="CENTER">
        <Label text="Конец периода: ">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </Label>
        <DatePicker fx:id="endDatePicker" >
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </DatePicker>
    </HBox>

    <CheckBox fx:id="separateCheckBox" 
              GridPane.columnIndex="0" 
              GridPane.rowIndex="1" 
              GridPane.halignment="LEFT"     
              text="Разбить по видам расходов" />

    <Button fx:id="fillButton" text="Сформировать"
            GridPane.columnIndex="1" 
            GridPane.rowIndex="1" 
            GridPane.halignment="RIGHT"
            onAction="#actionFillButton">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
    </Button>


    <LineChart fx:id="expensesChart" 
               GridPane.columnIndex="0" GridPane.rowIndex="2" 
               GridPane.columnSpan="2" 
               GridPane.halignment="CENTER" >
        <xAxis>
            <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT" />
        </yAxis>
    </LineChart>
</GridPane>
